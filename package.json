{
  "name": "fbl-gothic-library",
  "version": "0.1.0",
  "description": "A private gothic digital library with midnight-reset access gate",
  "main": "src/worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev public --compatibility-date 2024-08-01",
    "build": "npm run build:pages && npm run build:worker",
    "build:pages": "node scripts/build-pages.js",
    "build:worker": "wrangler deploy --dry-run",
    "deploy": "npm run build && wrangler pages deploy public && wrangler deploy",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src/ --ext .js,.ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.95.0"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": ["digital-library", "gothic", "cloudflare", "private"],
  "license": "MIT"
}